@model IndexViewModel
@{
    ViewBag.Title = "Home";
}
<div class="container" id="tests">
    <div class="row">
        <div class="col-xs-12">
            <ul class="breadcrumb">
                <li>Test Files</li>
            </ul>
        </div>
    </div>
    <h2>Test Files</h2>
    <div class="row">
        <nav class="col-xs-9">
            @Html.Partial("Partials/_TestFilePager")
        </nav>
        <div class="col-xs-3 text-right">
            <a title="Add" class="btn btn-sm btn-primary" href="@Url.Action("Add", "TestFile")">
				<i class="material-icons">add</i>
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @using (Html.BeginForm("Run", "Home"))
            {
                foreach (string filename in Model.Files)
                {
                    <tr>
                        <td class="filename">@filename</td>
                        <td>
                            <a title="View" class="btn btn-sm btn-primary" href="@Url.Action("View", "Test", new {filename = filename})">
                                <i class="material-icons">description</i>
                            </a>
                            <button title="Run" class="btn btn-sm btn-success" type="submit" name="filename" value="@filename">
                                <i class="material-icons">play_arrow</i>
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @Html.Partial("Partials/_TestFilePager")
</div>
